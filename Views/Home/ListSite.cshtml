<div>
    <a href="#/site/create" class="btn">Create Site</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Site Id</th>
            <th>Site Name</th>
            <th>Country</th>
            <th>State</th>
            <th>Is Active</th>
            <th></th>
            <th></th>
        </tr>
        <tr ng-repeat="item in sites">
            <td>{{ item.SiteId }}</td>
            <td>{{ item.SiteName }}</td>
            <td>{{ item.Country }}</td>
            <td>{{ item.State }}</td>
            <td>
                <span class="label" ng-class="{true:'label-success', false:'label-danger', '':'hidden'}[item.IsActive]">
                    {{ item.IsActive ? 'Active' : 'In Active' }}
                </span>
            </td>
            <td>
                <a href="#/site/edit/{{item.SiteId}}" class="glyphicon glyphicon-edit"></a>
            </td>
            <td>
                <a href="#/site/delete/{{item.SiteId}}" class="glyphicon glyphicon-trash"></a>
            </td>
        </tr>
    </table>
</div>