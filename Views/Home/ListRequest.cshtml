<div>
    <a href="#/request/create" class="btn">Create</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Request Id</th>
            <th>Requestor Name</th>
            <th>Asset Name</th>
            <th>Room Name</th>
            <th>Building Name</th>
            <th>Site Name</th>
            <th>Country</th>
            <th>State</th>
            <th>Is Active</th>
            <th></th>
            <th></th>
        </tr>
        <tr ng-repeat="item in requests">
            <td>{{ item.RequestId }}</td>
            <td>{{ item.RequestorName }}</td>
            <td>{{ item.ProjectName }}</td>
            <td>{{ item.RoomName }}</td>
            <td>{{ item.BuildingName }}</td>
            <td>{{ item.SiteName }}</td>
            <td>{{ item.Country }}</td>
            <td>{{ item.State }}</td>
            <td>{{ item.DateofBirth | date }}</td>
            <td>
                <span class="label" ng-class="{true:'label-success', false:'label-danger', '':'hidden'}[item.IsActive]">
                    {{ item.IsActive ? 'Active' : 'In Active' }}
                </span>
            </td>
            <td>
                <a href="#/request/edit/{{item.RequestId}}" class="glyphicon glyphicon-edit"></a>
            </td>
            <td>
                <a href="#/request/delete/{{item.RequestId}}" class="glyphicon glyphicon-trash"></a>
            </td>
        </tr>
    </table>
</div>